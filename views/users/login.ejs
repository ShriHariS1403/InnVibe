<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-4 mt-3"> Login on Wanderlust </h1>
    <div class="col-6 offset-2 mt-5 ">
        <form action="/login"method="POST" class="needs-validation" novallidate >
            <div class="mb-3">
                <label for="username"class="form-label">Username</label>
                <input name="username"
                 id="username"
                 type="text" 
                 class="form-control"
                 required
                 />
                 <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="mb-3">
                <label for="password"class="form-label">Password</label>
                <input name="password"
                 id="password"
                 type="password" 
                 class="form-control"
                 required
                 />
              </div>
              <button class="btn btn-success " > Login </button>
        </form>
    </div>
</div>
        